# Game Settings File
# _source
# Source Engine

# Import default settings
fn_import_game_settings engines/halflife_shared

# And the settings for defaults
fn_set_game_setting settings "engine" "source" "Game Engine"

# These are values that the script uses, they don't get used by the srcds server directly
fn_set_game_setting settings "executable" "./srcds_run"

# Game Actions
fn_set_game_setting scriptactions "sm" "sourcemod|install_sourcemod.sh|Install SourceMod."

# Game Parameters
fn_set_game_parm parms_plus "tv_port" "27020" "SourceTV Port"
