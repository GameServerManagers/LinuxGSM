# Game Settings File
# engines/avalanche
# Avalanche Engine

fn_import_game_settings include/steam
fn_import_game_settings include/sourcetv
fn_import_game_settings include/tickrate

# Dependencies
fn_set_game_setting dependencies  "libstdc++.so.6" "4f9c911de2276f988afaf47659a8367f"

# And the settings for defaults
fn_set_game_setting settings "engine" "avalanche"
fn_set_game_setting settings "servercfg" "config.lua" "Server Config file"

# These are values that the script uses, they don't get used by the srcds server directly
fn_set_game_setting settings "systemdir" "\${filesdir}"
fn_set_game_setting settings "executabledir" "\${filesdir}"
fn_set_game_setting settings "executable" "./Jcmp-Server"
fn_set_game_setting settings "servercfg" "config.lua"
fn_set_game_setting settings "servercfgdir" "\${filesdir}"
fn_set_game_setting settings "servercfgfullpath" "\${servercfgdir}/\${servercfg}"
fn_set_game_setting settings "servercfgdefault" "default_config.lua"

