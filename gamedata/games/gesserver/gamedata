# Game Settings File
# Import Engine
fn_import_game_settings engines/source

# https://developer.valvesoftware.com/wiki/Command_Line_Options#Source_Dedicated_Server
fn_parms(){
parms="-game gesource -strictportbind -ip ${ip} -port ${port} +clientport ${clientport} +tv_port ${tv_port} +map ${map} +servercfgfile ${servercfg} -maxplayers ${maxplayers}"
}

fn_set_game_setting settings "appid" "310"
fn_set_game_setting settings "map" "ge_archives"
fn_set_game_setting settings "game" "gesource"
fn_set_game_setting settings "gamename" "GoldenEye: Source"
