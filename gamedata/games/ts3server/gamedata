# Game Settings File
# ts3server
# TeamSpeak 3 Server

# Import default settings
fn_import_game_settings include/default

fn_set_game_setting settings "gamename" "TeamSpeak 3"
fn_set_game_setting settings "servername" "TeamSpeak 3 Server"
fn_set_game_setting settings "servicename" "ts3-server"
fn_set_game_setting settings "executabledir" "\${filesdir}"
fn_set_game_setting settings "executable" "./ts3server_startscript.sh"
fn_set_game_setting settings "servercfg" "\${servicename}.ini"
fn_set_game_setting settings "servercfgdir" "\${filesdir}"
fn_set_game_setting settings "servercfg_suffix" ".ini"

fn_set_game_setting scriptactions "pw" "change-password|command_ts3_server_pass.sh|Change Password."

