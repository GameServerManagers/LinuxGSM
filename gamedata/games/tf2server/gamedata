# Game Settings File
# Import Engine
fn_import_game_settings engines/source
fn_import_game_settings include/gslt

# https://developer.valvesoftware.com/wiki/Command_Line_Options#Source_Dedicated_Server
fn_parms(){
parms="-game tf -strictportbind -ip ${ip} -port ${port} +clientport ${clientport} +tv_port ${tv_port} +map ${map} +sv_setsteamaccount ${sv_setsteamaccount} +servercfgfile ${servercfg} -maxplayers ${maxplayers}"
}
fn_set_game_setting settings "appid" "232250"
fn_set_game_setting settings "gamename" "Team Fortress 2"
fn_set_game_setting settings "map" "cp_badlands"
fn_set_game_setting settings "maxplayers" "16"
fn_set_game_setting settings "game" "tf"
