# Game Settings File
# Import Engine
fn_import_game_settings engines/unity3d

# http://7daystodie.gamepedia.com/Server
fn_parms(){
parms="-configfile=${servercfgfullpath} -dedicated"
}

fn_set_game_setting settings "appid" "294420"
fn_set_game_setting settings "gamename" "7 Days To Die"
fn_set_game_setting settings "executable" "./startserver.sh"
fn_set_game_setting settings "servercfg" "\${servicename}.xml"
fn_set_game_setting settings "servercfgdir" "\${filesdir}"
fn_set_game_setting settings "servercfgfullpath" "\${servercfgdir}/\${servercfg}"
fn_set_game_setting settings "servercfgdefault" "serverconfig.xml"
fn_set_game_setting settings "steamauth" "user"
