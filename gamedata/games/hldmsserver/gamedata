# Game Settings File
# Import Engine
fn_import_game_settings engines/source

# https://developer.valvesoftware.com/wiki/Command_Line_Options#Source_Dedicated_Server
fn_parms(){
parms="-game hl1mp -strictportbind -ip ${ip} -port ${port} +clientport ${clientport} +tv_port ${tv_port} +map ${map} +servercfgfile ${servercfg} -maxplayers ${maxplayers}"
}
# Steam
fn_set_game_setting settings "appid" "255470"
fn_set_game_setting settings "map" "crossfire"
fn_set_game_setting settings "game" "hl1mp"
fn_set_game_setting settings "gamename" "Half-Life Deathmatch: Source"

