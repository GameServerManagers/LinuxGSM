# Game Settings File
# Import Engine
fn_import_game_settings engines/source

# https://developer.valvesoftware.com/wiki/Command_Line_Options#Source_Dedicated_Server
fn_parms(){
parms="-game dod -strictportbind -ip ${ip} -port ${port} +clientport ${clientport} +tv_port ${tv_port} +map ${map} +servercfgfile ${servercfg} -maxplayers ${maxplayers}"
}
fn_set_game_setting settings "appid" "232290"
fn_set_game_setting settings "map" "dod_Anzio"
fn_set_game_setting settings "game" "dod"
fn_set_game_setting settings "gamename" "Day Of Defeat: Source"
